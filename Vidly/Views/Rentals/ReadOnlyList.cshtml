@model IEnumerable<Vidly.Models.Rental>

@{
    ViewBag.Title = "List";
}

<h2>Rentals</h2>

<table id="rentals" class="table table-bordered table-hover">
    <tr>
        <th>Customer</th>
        <th>Movie</th>
        <th>Date Rented</th>
        <th>Date Returned</th>        
    </tr>
    <tbody></tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#rentals").DataTable({
                ajax: {
                    url: "/api/rentals",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "customer.name"                        
                    },
                    {
                        data: "movie.name"
                    },
                    {
                        data: "DateRented"
                    },
                    {
                        data: "DateReturned"
                    }
                ]
            });
                                   
        });
    </script>
}